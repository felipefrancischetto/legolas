{
  "name": "legolas",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "dev:audio": "next dev -p 3000 --turbo",
    "dev:full": "concurrently \"npm run dev:audio\" \"npm run monitor:downloads\"",
    "legolas": "node scripts/start-legolas.js",
    "legolas:dev": "cross-env NODE_ENV=development node scripts/start-legolas.js",
    "legolas:prod": "cross-env NODE_ENV=production node scripts/start-legolas.js",
    "build": "next build",
    "build:standalone": "next build && next export",
    "start": "next start",
    "start:audio": "next start -p 3000",
    "monitor:downloads": "node scripts/monitor-downloads.js",
    "lint": "next lint",
    "check-env": "node scripts/check-environment.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.17",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "csv-writer": "^1.6.0",
    "date-fns": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.0.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^12.9.4",
    "lodash": "^4.17.21",
    "next": "15.0.0",
    "node-cache": "^5.1.2",
    "node-id3": "^0.2.9",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "playwright": "^1.52.0",
    "postcss": "^8.4.35",
    "proxy-agent": "^6.5.0",
    "puppeteer": "^24.8.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^6.0.1",
    "typescript": "^5.3.3",
    "user-agents": "^1.1.557",
    "uuid": "^11.1.0",
    "wavesurfer.js": "^7.9.5",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5",
    "yt-dlp-exec": "^1.0.2",
    "ytdl-core": "^4.11.5",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.17",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/user-agents": "^1.0.4",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.legolas.app",
    "productName": "Legolas",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/legolas_thumb.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/legolas_thumb.png",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/legolas_thumb.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
